<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/open_pdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:text="打开PDF文件" />

            <Button
                android:id="@+id/create_pdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@+id/open_pdf"
                android:text="生成PDF文件" />


            <LinearLayout
                android:id="@+id/image_count_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_image_1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="2dp"
                    android:padding="0dp"
                    android:text="1"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_image_2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="2dp"
                    android:padding="0dp"
                    android:text="2"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_image_3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="2dp"
                    android:padding="0dp"
                    android:text="3"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_image_4"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="2dp"
                    android:padding="0dp"
                    android:text="4"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_image_5"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="2dp"
                    android:padding="0dp"
                    android:text="5"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_image_6"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="2dp"
                    android:padding="0dp"
                    android:text="6"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_image_7"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="2dp"
                    android:padding="0dp"
                    android:text="7"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_image_8"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="2dp"
                    android:padding="0dp"
                    android:text="8"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_image_9"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="0dp"
                    android:text="9"
                    android:textSize="12sp" />
            </LinearLayout>

            <Button
                android:id="@+id/print_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/image_count_buttons"
                android:text="打印报告" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_a3"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@+id/open_pdf"
                android:text="A3" />

            <Button
                android:id="@+id/btn_a4"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@+id/open_pdf"
                android:text="A4" />

            <Button
                android:id="@+id/btn_b5"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@+id/open_pdf"
                android:text="B5" />
            <Button
                android:id="@+id/set_font_song_ti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:text="设置字体" />

            <Button
                android:id="@+id/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@+id/open_pdf"
                android:text="退出该界面" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@+id/open_pdf"
                android:background="@color/black"
                android:text="请替换网络图片的url"
                android:textColor="@color/white" />


        </LinearLayout>


    </LinearLayout>
    <!--    <es.voghdev.pdfviewpager.library.PDFViewPager-->
    <!--        android:id="@+id/pdfViewPager"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        app:assetFileName="sample.pdf" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="1dp"
        android:background="@color/red" />

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/blue"
        android:visibility="visible" />


</LinearLayout>